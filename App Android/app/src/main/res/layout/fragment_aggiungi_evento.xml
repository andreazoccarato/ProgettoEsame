<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:adroid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:fontFamily="casual"
        android:text="Inserisci Evento"
        android:textSize="35dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/inserisci_evento_data"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="data (gg/mm/aaaa)" />

    <EditText
        android:id="@+id/inserisci_evento_materia"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="materia" />

    <EditText
        android:id="@+id/inserisci_evento_descrizione"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="descrizione" />

    <Button
        android:id="@+id/inserisci_evento_bottone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Aggiungi"
        android:textStyle="bold"
        android:theme="@style/AppTheme.Button" />


</LinearLayout>